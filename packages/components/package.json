{
  "name": "@drofens/components",
  "version": "1.2.9",
  "description": "Server components by Drofens",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "scripts": {
    "dev:next": "next dev",
    "dev:tsup": "tsup src/index.tsx --format esm,cjs,iife --dts --external react,react-dom,next --watch",
    "build": "tsup src/index.tsx --format esm,cjs,iife --dts --external react,react-dom,next",
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:tsup\"",
    "start": "next start",
    "lint": "eslint src/**/*.ts*"
  },
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "10.4.14",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.229.0",
    "postcss": "8.4.14",
    "tailwindcss": "3.3.2"
  },
  "devDependencies": {
    "@drofens/eslint-config": "*",
    "@drofens/tokens": "*",
    "@drofens/ts-config": "*",
    "@tailwindcss/forms": "^0.5.3",
    "@types/js-cookie": "^3.0.3",
    "@types/node": "20.2.4",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.2.4",
    "concurrently": "^8.0.1",
    "next": "13.4.4",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tsup": "^6.7.0",
    "typescript": "5.0.4"
  }
}
